<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageVersion>1.0.2</PackageVersion>
        <PackageId>timashuk.cleanarchitecture.template</PackageId>
        <Title>Clean architecture Project Template</Title>
        <Authors>Dmitriy Timashuk</Authors>
        <Description>Clean Architecture template for microservices</Description>
        <PackageTags>dotnet-new;templates;cleanarchitecture;web</PackageTags>
        <TargetFramework>net10.0</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetForlders>content</ContentTargetForlders>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <RepositoryUrl>https://github.com/TimashukDmitriy/dotnet-cleanarchitecture-template</RepositoryUrl>
        <PackageLicenseExpression>empty</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="working\content\**" Exclude="working\content\**\bin\**;working\content\**\obj\**" />
        <Compile Remove="**\*" />
    </ItemGroup>
</Project>